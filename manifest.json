{
  "manifest_version": 3,
  "name": "Video Download Helper",
  "description": "Inject Download Button and Trigger Custom Download Logic When Matching Specific URLs",
  "version": "1.0.0",
  "action": {
    "default_title": "Video Download Helper",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/video_download_helper_icon_16.png",
      "32": "assets/icons/video_download_helper_icon_32.png"
    }
  },
  "permissions": [
    "tabs",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "assets/icons/video_download_helper_icon_16.png",
    "32": "assets/icons/video_download_helper_icon_32.png",
    "48": "assets/icons/video_download_helper_icon_48.png",
    "128": "assets/icons/video_download_helper_icon_128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/styles/content.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}

